{
  "name": "offline-screenshot-tool",
  "version": "1.0.0",
  "description": "Completely offline desktop screenshot tool with Claude Code integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "build:portable": "electron-builder --win portable",
    "dist": "npm run build",
    "build:setup": "node build-setup.js",
    "prebuild": "node build-setup.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "screenshot",
    "desktop",
    "offline",
    "claude-code"
  ],
  "author": "ScreenCapture Tool",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-mock-ipc": "^0.3.12",
    "jest": "^30.1.1"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "jimp": "^1.6.0",
    "temp": "^0.9.4",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.screencapture.tool",
    "productName": "Screenshot Tool",
    "copyright": "Copyright Â© 2025 Screenshot Tool",
    "directories": {
      "output": "dist"
    },
    "publish": null,
    "files": [
      "main.js",
      "src/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/@emnapi/**",
      "!**/node_modules/@emnapi/**"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "identity": null,
      "entitlements": "assets/entitlements.plist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
